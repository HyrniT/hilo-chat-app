<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    android:paddingVertical="4dp">

    <LinearLayout
        android:id="@+id/layoutLeftMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_rounded_corner"
        android:backgroundTint="@color/md_theme_light_primaryContainer"
        android:padding="10dp"
        android:layout_marginEnd="80dp">

        <TextView
            android:id="@+id/txtLeftMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/md_theme_light_onPrimaryContainer"/>

        <ImageView
            android:id="@+id/imgLeftMessage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutRightMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rectangle_rounded_corner"
        android:backgroundTint="@color/md_theme_dark_primaryContainer"
        android:padding="10dp"
        android:layout_marginStart="80dp">

        <TextView
            android:id="@+id/txtRightMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/md_theme_dark_onPrimaryContainer"/>

        <ImageView
            android:id="@+id/imgRightMessage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>